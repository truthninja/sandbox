{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"test-job",
      "labels":{
         "name":"basic-job"
      }
   },
   "spec":{
      "replicas": 1,
      "selector":{
         "name":"basic-pod"
      },
      "template":{
         "metadata":{
            "namespace": "test",
            "labels":{
               "name":"basic-pod"
            }
         },
         "spec":{
            "restartPolicy": "Always",
            "containers":[
               {
                  "name":"test-container",
                  "image":"kubernetes/pause",
                  "command": ["bash", "-c", "exit 1;"]
               }
            ]
         }
      }
   }
}
